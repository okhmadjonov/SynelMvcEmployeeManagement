@model EmployeeManagement.Domain.Entity.Employee
@{
    ViewBag.Title = "Edit employee";
}

<div class="container">
    <form asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="PayrollNumber" class="control-label">Payroll Number</label>
            <input type="text" asp-for="PayrollNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ForeNames" class="control-label">Fore Names</label>
            <input type="text" asp-for="ForeNames" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label">Surname</label>
            <input type="text" asp-for="Surname" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth" class="control-label">Date Of Birth</label>
            <input asp-for="DateOfBirth" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Telephone" class="control-label">Telephone</label>
            <input type="text" asp-for="Telephone" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Mobile" class="control-label">Mobile</label>
            <input type="text" asp-for="Mobile" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label">Address</label>
            <input type="text" asp-for="Address" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Address2" class="control-label">Address2</label>
            <input type="text" asp-for="Address2" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Postcode" class="control-label">Postcode</label>
            <input type="text" asp-for="Postcode" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="EmailHome" class="control-label">Email Home</label>
            <input type="text" asp-for="EmailHome" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="StartDate" class="control-label">Start Date</label>
            <input asp-for="StartDate" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-primary" />
        </div>
    </form>
</div>